@model Person

<div class="container">
    <div class="card border-primary mt-3">
        <div class="card-header text-center">
            <h2 class="card-title">Update Person</h2>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-2"></div>
                <div class="col">
                    <form method="post">
                        <div class="form-group">
                            <label asp-for="Name" class="form-label mt-4"></label>
                            <input asp-for="Name" type="text" class="form-control" placeholder="Enter Name">
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div>
                            <label asp-for="Age" class="form-label mt-4"></label>
                            <input asp-for="Age" type="number" class="form-control" placeholder="Enter Age">
                            <span asp-validation-for="Age" class="text-danger"></span>
                        </div>

                        <div class="row mt-4">
                            <div class="col-6">
                                <a class="btn btn-outline-secondary form-control" asp-area="" asp-controller="Home" asp-action="Index">Cancel</a>
                            </div>
                            <div class="col-6">
                                <button type="submit" class="btn btn-primary form-control">Save Changes</button>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="col-2"></div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}